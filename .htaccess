<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On

    # Block access to .env files (anywhere)
    RewriteRule ^(.*/)?\.env$ - [F,L]
    
    # Block access to sensitive files
    <FilesMatch "\.(env|log|ini|conf|bak|backup|old|orig|save|swp|tmp)$">
        Order allow,deny
        Deny from all
    </FilesMatch>
    
    # Block access to admin directory files (except through Laravel)
    RewriteCond %{REQUEST_URI} ^/admin/(app|bootstrap|config|database|resources|routes|storage|vendor|\.env|composer\.(json|lock)|artisan|phpunit\.xml)
    RewriteRule ^ - [F,L]

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Exclude existing files and directories from Laravel routing
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Exclude Node.js API routes and static files
    RewriteCond %{REQUEST_URI} ^/api/ [OR]
    RewriteCond %{REQUEST_URI} ^/modules/ [OR]
    RewriteCond %{REQUEST_URI} ^/uploads/ [OR]
    RewriteCond %{REQUEST_URI} ^/bin/ [OR]
    RewriteCond %{REQUEST_URI} ^/icc_profiles/ [OR]
    RewriteCond %{REQUEST_URI} ^/node_modules/ [OR]
    RewriteCond %{REQUEST_URI} ^/css/ [OR]
    RewriteCond %{REQUEST_URI} ^/favicon\.ico$ [OR]
    RewriteCond %{REQUEST_URI} ^/index\.js$ [OR]
    RewriteCond %{REQUEST_URI} ^/package\.json$ [OR]
    RewriteCond %{REQUEST_URI} \.(js|css|png|jpg|jpeg|gif|svg|ico|pdf|zip|py)$
    RewriteRule ^ - [L]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Laravel requests to Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent access to .env
    <FilesMatch "\.env$">
        Header set Content-Type "text/plain"
        Header set X-Content-Type-Options "nosniff"
    </FilesMatch>
</IfModule>
